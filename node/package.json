{
  "name": "@napi-rs/magic-string",
  "version": "0.1.2",
  "description": "rusty magic-string",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "https://github.com/h-a-n-a/magic-string-rs.git",
  "authors": [
    {
      "name": "h-a-n-a",
      "email": "andywangsy@gmail.com"
    },
    {
      "name": "LongYinan",
      "email": "github@lyn.one"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "magic-string",
    "string",
    "napi",
    "N-API",
    "napi-rs"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "binding.js"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --js binding.js --pipe \"prettier -w\"",
    "build:debug": "napi build --platform --js binding.js --pipe \"prettier -w\"",
    "prepublishOnly": "napi prepublish -t npm && esbuild --minify --outfile=binding.js --allow-overwrite binding.js",
    "test": "echo test",
    "lint": "echo lint",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.0.0-beta.4",
    "@swc-node/register": "^1.4.0",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.31.2",
    "ava": "^3.15.0",
    "benny": "^3.7.1",
    "chalk": "^4.1.2",
    "esbuild": "^0.14.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "napi": {
    "name": "magic-string-rs",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "i686-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf",
        "aarch64-apple-darwin",
        "x86_64-unknown-freebsd",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "aarch64-linux-android",
        "armv7-linux-androideabi"
      ]
    }
  },
  "engines": {
    "node": ">= 10"
  }
}
